<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LitFinder" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/primary80</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary branding color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/primary90</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Error color -->
        <item name="colorError">@color/danger</item>
        <item name="colorOnError">@color/black</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Surface color -->
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.LitFinder" parent="Base.Theme.LitFinder" />
</resources>